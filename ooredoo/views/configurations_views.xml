    <!-- Legal Information Distributor-->
    <record id="legal_ordeoo_form" model="ir.ui.view">
        <field name="name">legal.information.distributor.form</field>
        <field name="model">legal.information</field>
        <field name="arch" type="xml">
            <form string="Legal Information">
                <sheet>
                    <group>
                        <group string="Legal Information">
                            <field name="type" invisible="1"/>
                            <field name="tra_license_status" attrs="{'required': [('type', '=', 'dealer')], 'invisible': [('type', '!=', 'dealer')]}"/>
                            <field name="municipality_expiry_date" attrs="{'required': [('type', '=', 'dealer')], 'invisible': [('type', '!=', 'dealer')]}"/>
                            <field name="registration_number" required="1" placeholder="e.g Oman chamber of commerce trade license" attrs="{'required': [('type', '=', 'distributor')], 'invisible': [('type', '!=', 'distributor')]}"/>
                            <field name="company_type_id" required="1" placeholder="Recognized by the oman government" attrs="{'required': [('type', '=', 'distributor')], 'invisible': [('type', '!=', 'distributor')]}"/>
                            <field name="vat" required="1" placeholder="e.g. BE0477472701" string="Tax ID"/>
                        </group>
                        <group string="Legal Address">
                            <label for="street" string="Address"/>
                            <div class="o_address_format">
                                <field name="street" required="1" placeholder="Street..." class="o_address_street"/>
                                <field name="wilaya_id" required="1" placeholder="Wilaya" class="o_address_city"/>
                                <field name="region_id" required="1" placeholder="Region" class="o_address_state"
                                       options='{"no_open": True, "no_create": True}'/>
                                <field name="zip" placeholder="Postal" class="o_address_zip"/>
                                <field name="country_id" placeholder="Country" class="o_address_country"
                                       options='{"no_open": True, "no_create": True}'/>
                            </div>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

